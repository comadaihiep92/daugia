                                                .col-md-6.col-sm-12.m-sm-top-24.mt-4
                                                    .col.d-flex.align-items-center.contact__column
                                                        label.mb-0.contact__label Phone:
                                                        input.form-control.contact__input(type='text', name='fake_453', value='', placeholder='')
                                                    span.invalid-feedback.cval-error.d-block(data-cval-error='fake_453')
                                                .col-md-6.col-sm-12.mt-4
                                                    .col.d-flex.align-items-center.contact__column
                                                        label.mb-0.contact__label Email:
                                                        input.form-control.contact__input(type='email', name='fake_497', value='', placeholder='')
                                                    span.invalid-feedback.cval-error.d-block(data-cval-error='fake_497')
                                                .col-md-6.col-sm-12.mt-4
                                                    .col.d-flex.align-items-center.contact__column
